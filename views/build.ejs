<h1>Imperial fleet approaching!<br><br>Select five ships to launch a counter-attack:</h1>

<% ships.forEach(function(ship) { %>
    <h4><%= ship.name %></h4>
    <img src="https://swgoh.gg<%=ship.image%>" width="100" height="100">
    <form method="POST" action="/ship">
        <input hidden type="text" name="name" value="<%= ship.name %>">
        <input hidden type="text" name="power" value="<%= ship.power %>">
        <input hidden type="text" name="role" value="<%= ship.role %>">
        <input hidden type="text" name="pic" value="https://swgoh.gg<%=ship.image%>">
        <button class="btn btn-primary" type="submit">Add to fleet</button>
    </form>
<% }) %>